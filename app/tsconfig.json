{
    "compilerOptions": {
        "target": "ES2020",                        
        "module": "ESNext",                        
        "moduleResolution": "Node",               
        "rootDir": "./src",                       
        "outDir": "./build",                     
        "esModuleInterop": true,                  
        "strict": true,                         
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }                    
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }